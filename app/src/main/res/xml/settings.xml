<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/title_reviews">
        <ListPreference
            app:key="reviews_sort_options"
            app:title="Sort by"
            app:defaultValue="dateCreated"
            app:entries="@array/reviews_sort_entries"
            app:entryValues="@array/reviews_sort_values"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="MISC">
        <ListPreference
            app:key="db_access_method"
            app:title="Database access method"
            app:defaultValue="none"
            app:entries="@array/db_access_method_entries"
            app:entryValues="@array/db_access_method_values"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
</PreferenceScreen>